<% layout('layouts/boilerplate') %>
<div class="row mt-3">
  <div class="col-8 offset-2">
    <br />
    <h3>Create a New Listing</h3>
    <form method="POST" action="/listings" novalidate class="needs-validation" enctype="multipart/form-data">
      <div>
        <label for="title" class="form-label">Title:</label>
        <input name="listing[title]" placeholder="Add a catchy title" type="text" class="form-control" required/>
        <div class="valid-feedback">
          title looks good!
      </div>
      <br /><br />
      <div>
        <label for="description" class="form-label">Description:</label>
        <textarea name="listing[description]"  class="form-control" required></textarea>
        <div class="invalid-feedback">
          Please provide a description.
      </div>
      <br /><br />
      <div>
        <label for="images" class="form-label">Upload Images:</label>
        <input name="images" type="file" class="form-control" multiple accept="image/*" />
        <div class="form-text">You can select multiple images (max 10, 5MB each). Supported formats: JPG, PNG, GIF, WebP</div>
        <div class="invalid-feedback">
          Please upload valid image files.
        </div>
      </div>
      
      <div class="mt-3">
        <label for="image_url" class="form-label">Or provide Image URL:</label>
        <input name="listing[image]" placeholder="enter image URL/Link (optional if uploading files)" type="text" class="form-control" />
        <div class="form-text">Use this field if you want to provide an image URL instead of uploading files</div>
      </div>
      <br /><br />
      <div class="row">
        <div class="col-md-4">
          <label for="price" class="form-label">Price:</label>
          <input name="listing[price]" placeholder="1100" type="number" class="form-control" required />
          <div class="invalid-feedback">
            Price should be valid.
            </div>
        
      </div>
      
      <br /><br />
      <div class="col-md-8">
        <label for="country" class="form-label">Country:</label>
        <input name="listing[country]" placeholder="India" type="text" class="form-control" required />
        <div class="invalid-feedback">
          Provide a valid country.
          </div>
      </div>
      </div>
      
      
      <br /><br />
      <div>
        <label for="location" class="form-label">Location:</label>
        <input name="listing[location]" placeholder="dwarka mor" type="text" class="form-control" />
        <div class="invalid-feedback">
          Provide a valid location.
          </div>
      </div>
      
      <br /><br />
      <button class="btn btn-dark add-btn">Add</button>
      <br><br />
      <a href="/listings" class="return">Go back to Listings</a>
    </form>
  </div>
  </div>